{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2018",
        "moduleResolution": "node",
        "module": "commonjs",
        "sourceMap": false,
        "noImplicitAny": false
    },
    "scripts": {
        "clean": "rimraf dist",
        "start": "npm-run-all clean --parallel watch:build watch:server --print-label",
        "watch:build": "tsc --watch",
        "watch:server": "nodemon './dist/index.js' --watch './dist'"
        },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".env"
    ],
    "compileOnSave": true
}